= form_for participant, html: { role: 'form'} do |f|
  - if participant.errors.any?
    #error_explanation.sr-only
      %h2
        = pluralize(participant.errors.count, "error")
        prohibited this participant from being saved:
      %ul
        - participant.errors.full_messages.each do |message|
          %li= message
  .row
    .form-group
      .field.col-md-12.mtxl
        = f.label :first_name
        = f.text_field :first_name, class: 'form-control'
      .field.col-md-12.mtxl
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control'
    .form-group
      .field.col-md-12.mtxl
        = f.label :email
        = f.text_field :email, class: 'form-control'
    .form-group
      .field.col-md-12.mtxl
        = f.label :company
        = f.text_field :company, class: 'form-control'
    .form-group
      .field.col-md-12.mtxl
        = f.label :job_title
        = f.text_field :job_title, class: 'form-control'
    .form-group
      .field.col-md-12.mtxl
        = f.label :location
        = f.text_field :location, class: 'form-control'
  %hr.mvxxl
  .row
    .form-group
      .actions.txt-c
        = f.submit 'Participate', class: 'btn btn-primary btn-lg'